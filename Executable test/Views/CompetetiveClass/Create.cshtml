@using DanceCompetitionApp;
@model CompetetiveClassViewModel
 
@{
    ViewData["Title"] = "Create";
}

<h1>Добавяне на състезателен клас</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-name="@ViewBag.CompetitionName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                @ViewBag.CompetitionName
            </div>
            <div class="form-group">
                <label class="control-label">Брой съдии</label>
                <input asp-for="JudgesCount" class="form-control" />
                <span asp-validation-for="JudgesCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад към състезателните класове</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
