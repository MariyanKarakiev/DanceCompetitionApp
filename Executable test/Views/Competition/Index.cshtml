@using BussinessLayer.Models;
@model List<Competition>;

@{
    ViewData["Title"] = "Home Page";
    var comp = @ViewData["message"];

}

<div class="text-center">
    <table class="table m-0 mt-3">
        <thead>
            <tr>
                <th>Име</th>              
                <th>Създадено</th>             
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var competition in Model)
                {
                    <tr>
                        <td>@competition.Name</td>
                        <td>@competition.CreatedOn</td>
                        <td>
                            <a asp-controller="CompetetiveClass" asp-action="Index" asp-route-name="@competition.Name" class="btn btn-outline-primary">Състезателни класове</a>
                            <a asp-controller="Competition" asp-action="Edit" asp-route-name="@competition.Name" class="btn btn-outline-primary">Редактирай</a>
                            <a asp-controller="Competition" asp-action="Delete" asp-route-name="@competition.Name" class="btn btn-outline-primary">Изтрий</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-controller="Competition" asp-action="Create">Добавете състезание</a>
</div>
